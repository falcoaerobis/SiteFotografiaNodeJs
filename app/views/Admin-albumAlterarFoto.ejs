<body>
<div class="config">

<hr>
  <div class="container">
  <h2>Adicionar nova foto</h2>   

  <div class="table-responsive">          
  <table class="table">
    <form action="inserirFoto" method="post">
    <tr>
      <td rowspan="3" style="width: 200px">
        <img src="img/System/album_default.jpg" width="200px" id="imgAddFoto">
      </td>
      <td>
        <input type="text" name="nomeFoto" placeholder="Nome da foto" class="form-control" id="fotoCapaText">
      </td>
    </tr>
    <tr>
      <td>
        <input type="text" name="url" placeholder="Url" class="form-control" id="fotoAddText">
      </td>
    </tr>
    <tr> 
      <td>
        <a href="https://pt-br.imgbb.com/" target="_blank"><input type="button" value="imgbb" class="btn btn-primary"></a>
        <a href="http://pt-br.tinypic.com" target="_blank"><input type="button" value="TinyPic" class="btn btn-success"></a>
        <a href="https://www.google.com/drive/" target="_blank"><input type="button" value="Google driver" class="btn btn-dark"></a>
      </td>
      <tr>
      <td colspan="2">
        <input type="hidden" name="idAlbum" value="<%=albuns[0]._id%>">
        <input type="submit"  class="btn btn-primary btn-block" value="Salvar">
      </td>
    </tr>
    </tr>
    </form>
   </table>
  </div>
</div>
<hr>

</div>
<div class="container">
  <h2 style="text-align: center">Fotos</h2>
          <br>                                                                                      
          <div class="table-responsive">          
          <table class="table">
            <thead>
              <tr>
                <th>Foto</th>
                <th>Nome usu√°rio</th>
                <th>Url</th>
                <th>Alterar</th>
                <th>Excluir</th>
              </tr>
            </thead>
            <tbody>
              <% for(let i = 0; i < portfolio.length; i++){ %>
              <tr>
                
                    <td style="text-align: left"><img src="<%=portfolio[i].url%>" style="width: 70px"></td>
                  <form action="alteraFotoPort" method="post">
                    <td><input type="text" name="nomeFoto" value="<%=portfolio[i].nomeFoto%>" class="form-control"></td>
                    <td><input type="text" name="url" value="<%=portfolio[i].url%>" class="form-control"></td>
                
                    <input type="hidden" name="idItem" value="<%=portfolio[i]._id%>">
                    <td><input type="submit" name="" value="Alterar" class="btn btn-success"></td>
                </form>
                <form action="excluirFotoPort" method="post">
                    <td>
                      <input type="hidden" name="idAlbum" value="<%=portfolio[i].idAlbum%>">
                      <input type="hidden" name="idItem" value="<%=portfolio[i]._id%>">
                      <input type="submit" name="" value="Excluir" class="btn btn-danger">
                    </td>
                </form>
              </tr>
              <% } %>
            </tbody>
          </table>
  
</div>
<script src="js/arbum.js" type="text/javascript"></script>
