<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Elizamfotos</title>

</head>

<body>

<input type="button" name="" id="btnMais" class="btnMais" value=">">

        <div>
        <div id="fundoBranco"></div>

    <div id="pg3" class="divisao3">    
        <div id="fundo2" class="fundo" style="background-image: url('<%=dadosIndex[0].imgLateral2%>');">
             <div class="divLogo">
                <img src="<%=dadosIndex[0].imgLogo%>">
            </div> 
        </div>  
        <input type="button" name="" id="btnMenos" class="btnMenos" value="<">  

          
        <div class="descricaoDivisao1" id="descriLateral21">
            <h1 class="animated fadeInLeft"><%=dadosIndex[0].fotoLateral1%></h1>
        </div>
        <div class="descricaoDivisao1" id="descriLateral22">
            <h1 class="animated fadeInLeft"><%=dadosIndex[0].fotoLateral2%></h1>
        </div>
        <div class="descricaoDivisao1" id="descriLateral23">
            <h1 class="animated fadeInLeft"><%=dadosIndex[0].fotoLateral3%></h1>
        </div>
    </div>

    <div class="header-sobreMim">
        <div class="container hero">
            <div class="row">
                <div class="col-12 col-lg-6 col-xl-5 imgFotoGrande">
                    <img src="<%=dadosIndex[0].imgSobre%>" class="fotoSobreMim">
                </div>
                <div class="col-md-5 col-lg-5 descriSobre" id="descriSobre">
                    <h1 style="font-family:Allura, cursive;font-size:47px;">Um pouco sobre mim</h1><hr>
                    <p><%= dadosIndex[0].descriSobre %>
                        
                    </p>
                    
                </div>
                <script >
                    if ($('#posicaoTela').val() === 'divisao'){
                        $('#descriSobre').removeClass('col-md-5 col-lg-5');
                        $('#descriSobre').addClass('col-12');
                    }
                </script>
            </div>
        </div>
    </div>
        
    <div class="opinioes" style="background-image: url('<%=dadosIndex[0].imgFundoDepoi%>');">
        <div class="container">
            <h1>O que as pessoas dizem...</h1>
            <hr class="hrIndex">
            <div class="row">
                
                <% for(let i = 0; i < depoimentos.length; i++){ %>
                <div class="col-md-6 col-ls-12 depoi"><div class="depoimento">
                    <table>
                        <tr>
                            <td></td>
                            <td>
                                <h4><%= depoimentos[i].assuntoDepoi%></h4>
                            </td>
                        </tr>
                        <tr>
                            <td style="vertical-align: top; width: 62px;">
                                <img src="<%= depoimentos[i].fotoDepoi %>" class="imgOpiniao">
                            </td>
                            <td style="text-align: left">
                                <p><%= depoimentos[i].mensagemDepoi%></p>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="text-align: right;"><b><%=depoimentos[i].nomeDepoi%> - <%=depoimentos[i].data.toLocaleDateString()%></b></td>
                        </tr>
                    </table>
                </div></div>
                <% } %>

        </div>
        <div class="divBtnDepoimento">
            <a><input type="button" class="btnDepoimento linkDepoi" name="" value="Mais +" onclick="abrirDepoi()"></a>
        </div>
        <script type="text/javascript">
            if ($('#posicaoTela').val() == 'divisao'){
                $('.depoi').removeClass('col-md-6');
                $('.depoi').addClass('col-md-12');
            }
        </script>
    </div></div>



        <!-- Contato -->
        <div class="foot">
            <div class="container">
            <div class="row">
                <div class="col-12 col-lg-8 col-xl-6">
                <form action="/enviarMensagem" method="post">
                    <div class="footForm">
                    <img src="<%=dadosIndex[0].imgMiniCam%>" class="imgFace">
                    <div class="form-group"><input class="form-control" type="text" name="nome" placeholder="Nome"></div>
                    <div class="form-group"><input class="form-control" type="email" name="email" placeholder="E-mail"></div>
                    <div class="form-group"><textarea class="form-control texArea" rows="14" name="mensagem" placeholder="Mensagem"></textarea></div>
                    <div class="form-group"><button id="btnEnviarMensagem" class="btn btn-primary" type="submit" >Enviar</button></div>
                </div>
                </form>
            </div>

            <div class="col-12 col-lg-4 col-xl-4">
                <h2 class="text-center">Me mande uma mensagem</h2>
                <div class="messageLayout">
                    <p>REDES SOCIAIS</p>
                    <hr>
                    <div class="messageSocial">
                        <a href="<%=dadosIndex[0].facebook%>"><img src="svg/icoFacebook.svg" class="icoSvg"></i></a>
                        <a href="<%=dadosIndex[0].instagram%>"><img src="svg/icoInstagram.svg" class="icoSvg"></i></a>
                    </div>
                </div>

                <div class="messageLayout">
                    <p>TELEFONE</p>
                    <hr>
                    <div class="messageSocial">
                        <%=dadosIndex[0].telefone1%><br>
                        <%=dadosIndex[0].telefone2%>
                    </div>
                </div>

                <div class="messageLayout">
                    <p>E-MAIL</p>
                    <hr>
                    <div class="messageSocial">
                        <%=dadosIndex[0].emailContato%>
                    </div>
                </div>
            </div>
            <div>
            </div>
        </div>
        </div>
    </div>

<script>
function abrirDepoi(){
    if(document.getElementById("local").value != "depoi"){
        $('#fundoBranco').fadeIn(1000);
        $('.carregando').fadeIn(1000);
        $('#branco').val("true");
       
        $('#local').val("depoi");
        setTimeout(function(){
            $.ajax({
                url : '/Depoimentos?divisao=depoi',
                method : 'get',
                success: function(data){
                  $('#pg2').html(data);
                }
            })
         },1000);
    }       
};
</script>

 <script src="js/paginasLegais.js" type="text/javascript"></script> 
</body>

</html>