<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Elizamfotos</title>

</head>

<body>
<div id="fundoBranco"></div>
        <input type="button" name="" id="btnMais" class="btnMais" value=">">
        <div>
        

    <div id="pg3" class="divisao3">    
        <div id="fundo" class="fundo">
             <div class="divLogo">
                <img src="img/System/logo.png">
            </div> 
        </div>  
        <input type="button" name="" id="btnMenos" class="btnMenos" value="<">  

          
        <div class="descricaoDivisao1" id="descriLateral1">
            <h1 class="animated fadeInLeft"><%=dadosIndex[0].fotoLateral1%></h1>
        </div>
        <div class="descricaoDivisao1" id="descriLateral2">
            <h1 class="animated fadeInLeft"><%=dadosIndex[0].fotoLateral2%></h1>
        </div>
        <div class="descricaoDivisao1" id="descriLateral3">
            <h1 class="animated fadeInLeft"><%=dadosIndex[0].fotoLateral3%></h1>
        </div>
    </div>

    <div class="perguntas">
        <h1>Perguntas frequentes</h1>

        <div class="container">
            <% for(i = 0; i < perguntas.length; i++){%>
            <div class="panel-group">
              <div class="panel panel-default">
                <div class="panel-heading">
                    <%=perguntas[i].pergunta%>
                    <div class="btnPergunta">
                        <button class="btnDepoimento" id="btnergunta<%=i%>" type="button" value="<%=i%>" onclick="mostrarResposta(this.value)">+</button>
                    </div>
                </div>
                <div id="resposta<%=i%>" class="panel-body"><%=perguntas[i].resposta%></div>
              </div>
            </div>
            <% } %>
        </div>
        <br><br>
    </div>
        
   

        <!-- Contato -->
        <div class="foot">
            <div class="container">
            <div class="row">
                <div class="col-12 col-lg-8 col-xl-6">
                <form action="/enviarMensagem" method="post">
                    <div class="footForm">
                    <img src="img/System/miniCam.jpg" class="imgFace">
                    <div class="form-group"><input class="form-control" type="text" name="nome" placeholder="Nome"></div>
                    <div class="form-group"><input class="form-control" type="email" name="email" placeholder="E-mail"></div>
                    <div class="form-group"><textarea class="form-control texArea" rows="14" name="mensagem" placeholder="Mensagem"></textarea></div>
                    <div class="form-group"><button id="btnEnviarMensagem" class="btn btn-primary" type="submit" >Enviar</button></div>
                </div>
                </form>
            </div>

            <div class="col-12 col-lg-4 col-xl-4">
                <h2 class="text-center">Me mande uma mensagem</h2>
                <div class="messageLayout">
                    <p>REDES SOCIAIS</p>
                    <hr>
                    <div class="messageSocial">
                        <a href="<%=dadosIndex[0].facebook%>"><img src="svg/icoFacebook.svg" class="icoSvg"></i></a>
                        <a href="<%=dadosIndex[0].instagram%>"><img src="svg/icoInstagram.svg" class="icoSvg"></i></a>
                    </div>
                </div>

                <div class="messageLayout">
                    <p>TELEFONE</p>
                    <hr>
                    <div class="messageSocial">
                        <%=dadosIndex[0].telefone1%><br>
                        <%=dadosIndex[0].telefone2%>
                    </div>
                </div>

                <div class="messageLayout">
                    <p>E-MAIL</p>
                    <hr>
                    <div class="messageSocial">
                        <%=dadosIndex[0].emailContato%>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
<script src="js/paginasLegais.js" type="text/javascript"></script>
</body>

</html>