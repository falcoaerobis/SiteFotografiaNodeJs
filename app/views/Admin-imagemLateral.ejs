  <div class="container">
  <h2>Fotos laterais</h2>   


  <div class="table-responsive">          
  <table class="table">   
    <tr>
      <td rowspan="3" style="width: 200px">
        <img src="../img/Portifolio/1.jpg" width="200px" id="imgAddFoto">
      </td>
      <td>
        <h4>Foto 1</h4>
      </td>
    </tr>
    <tr>
      <td>
        <form action="salvarMiniPort" method="post">
          <div class="input-group">
            <input type="text" name="fotoLateral1" placeholder="Nome da foto" class="form-control" value="<%=dadosIndex[0].fotoLateral1%>">
            <input type="submit" class="btn btn-primary" value="Salvar">
          </div>
        </form>
      </td>
    </tr>
    <tr> 
      <td>
        <form action="fileuploadLateral" method="post" enctype="multipart/form-data" id="fileuploadLateral">
          <input type="hidden" name="arquivo" value="1">
           <label class="btn btn-primary" onchange="document.getElementById('fileuploadLateral').submit()">
                Alterar foto <input type="file" name="filetouploadLogo" hidden>
            </label>
        </form>
        <form action="fileuploadLateralDefault" method="post" enctype="multipart/form-data">
          <input type="hidden" name="arquivo" value="1">
          <input type="submit" value="Foto padrão" class="btn btn-danger">
        </form>
      </td>

    </tr>
   </table>
